<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/user_name"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre con apellidos"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fav_btn"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:gravity=""
            android:background="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_carrito_perfil"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrito de compras"
            android:gravity=""
            android:background="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:visibility="gone"
            android:onClick="abre_forma_de_pago"
            android:id="@+id/formas_de_pago"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formas de pago"
            android:gravity=""
            android:background="@color/white"/>



        <Button

            android:id="@+id/editar_perfil"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            android:gravity="left"
            android:background="@color/white"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <Button

            android:id="@+id/boton"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cerrar sesión"
            android:gravity="left"
            android:background="@color/white"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button

            android:id="@+id/unete_a_nosotros"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Únete a nosotros"
            android:gravity="left"
            android:background="@color/white"/>

    </LinearLayout>

</LinearLayout>